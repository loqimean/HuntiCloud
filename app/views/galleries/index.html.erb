<section class="lg:ml-72">
  <%= form_with url: galleries_path, model: Gallery, class: 'fixed right-5 bottom-6' do |f| %>
    <%= f.label 'Upload file', for: :gallery_file, class: 'btn btn-blue' %>
    <%= f.file_field :file, hidden: '', onchange: 'form.submit()' %>
  <% end %>

  <% @gallery_decorator.date_grouped_collection.each do |date, collection| %>
    <div class="mb-6">
      <%= simple_format(date, class: 'text-2xl dark:text-white mb-3') %>

      <div class="flex flex-wrap">
        <% collection.each do |gallery_file| %>
          <div class="w-1/3 p-2">
            <%= image_tag gallery_file.file.thumb.url, class: 'rounded max-h-52 m-auto' %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</section>
