<section class="w-full h-full mx-auto md:w-2/3">
  <%= simple_form_for @person do |f| %>
    <label class="relative block mx-auto mb-10 overflow-hidden bg-white rounded-full cursor-pointer avatar-picture w-36 h-36" for="person_photo">
      <span class="absolute font-bold">Upload</span>
      <div class="overlay"></div>
    </label>
    <%= f.input :photo, label: false, input_html: { class: 'hidden' } %>

    <div class="grid grid-cols-1 gap-5 xl:grid-cols-2">
      <%= f.input :first_name %>
      <%= f.input :last_name %>
    </div>

    <div class="grid grid-cols-1 gap-5 xl:grid-cols-2">
      <%= f.input :instagram_url %>
      <%= f.input :telegram %>
    </div>

    <%= f.input :gender, collection: Person::GENDERS.keys %>
    <%= f.input :current_city_id, collection: City.ordered %>

    <%= f.input :characteristic %>

    <%= f.button :submit %>
  <% end %>
</section>
